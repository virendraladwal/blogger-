        <li class="w3-padding-16"><%= pro.storage %></li>
        <li class="w3-padding-16"><%= pro.email %></li>
        <li class="w3-padding-16"><%= pro.price %></li>
        <li class="w3-padding-16">
        <h2 class="w3-wide"><%= pro.price %></h2>
